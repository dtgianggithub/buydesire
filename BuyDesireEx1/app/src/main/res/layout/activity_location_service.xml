<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.example.giangdam.buydesireex1.LocationServiceActivity">

    <include android:id="@+id/app_bar_location_service"  layout="@layout/app_bar_storeinfo" />
     <TextView
         android:textStyle="italic"
         android:layout_marginLeft="20dp"
         android:layout_marginRight="20dp"
         android:layout_marginTop="20dp"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="Turn on Location-based alerts so we can use your location data and location search queries to help you find nearbby merchants, your favourite in-store desires, and exclusives just for you"
         />

   <RelativeLayout
       android:layout_marginTop="30dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       >

       <TextView
           android:layout_alignParentLeft="true"
           android:id="@+id/lblAlert"
           android:textColor="@color/black"
           android:layout_marginLeft="20dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Receive location-based alerts"
           />

           <ToggleButton
               android:layout_marginRight="30dp"
               android:layout_alignParentRight="true"
               android:id="@+id/toggleButtonAlerts"
               android:layout_width="40dp"
               android:layout_height="20dp"
               android:background="@drawable/toggle_selector"
               android:checked="false"
               android:text=""
               android:textOff=""
               android:textOn=""
               />
   </RelativeLayout>

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Receive location-based alerts"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:paddingLeft="20dp"
        />

    <RelativeLayout
        android:layout_marginBottom="30dp"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_alignParentLeft="true"
            android:id="@+id/lblAddLocation"
            android:layout_marginLeft="20dp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Add a location to my tagged item"
            />

        <ToggleButton
            android:layout_marginRight="30dp"
            android:layout_alignParentRight="true"
            android:id="@+id/toggleButtonAddLocation"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:background="@drawable/toggle_selector"
            android:checked="false"
            android:text=""
            android:textOff=""
            android:textOn=""
            />

        <TextView
            android:layout_marginTop="30dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/lblAddLocation"
            android:id="@+id/lblShowRetailer"
            android:layout_marginLeft="20dp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Use my location to show retailers near me when I'm out shopping"
            />

        <ToggleButton
            android:layout_marginTop="30dp"
            android:layout_below="@+id/toggleButtonAddLocation"
            android:layout_marginRight="30dp"
            android:layout_alignParentRight="true"
            android:id="@+id/toggleButtonShowRetailer"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:background="@drawable/toggle_selector"
            android:checked="false"
            android:text=""
            android:textOff=""
            android:textOn=""
            />

        <TextView
            android:layout_marginTop="30dp"
            android:layout_below="@+id/lblShowRetailer"
            android:layout_alignParentLeft="true"
            android:id="@+id/lblRetailerNotify"
            android:layout_marginLeft="20dp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Let retailers notify me when I'm near their store if they have an exclusive offer for me"
            />

        <ToggleButton
            android:layout_marginTop="40dp"
            android:layout_below="@+id/toggleButtonShowRetailer"
            android:layout_marginRight="30dp"
            android:layout_alignParentRight="true"
            android:id="@+id/toggleButtonRetailerNotify"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:background="@drawable/toggle_selector"
            android:checked="false"
            android:text=""
            android:textOff=""
            android:textOn=""
            />
    </RelativeLayout>

</LinearLayout>
