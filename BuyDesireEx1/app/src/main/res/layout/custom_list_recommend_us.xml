<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/focuseblue"
    android:paddingBottom="20dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/imgProductImage"
            android:layout_width="match_parent"
            android:layout_height="330dp"
            />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@color/gray"
            >

            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/txtRetailerName"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:layout_weight="6"

                />

            <ImageButton
                android:id="@+id/imgbtnDesires"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/ic_desiredetail_heart_off"
                android:layout_marginRight="10dp"
                />


            <TextView
                android:id="@+id/txtDesiresCount"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginRight="20dp"

                />

            <ImageButton
                android:layout_centerVertical="true"
                android:id="@+id/imgbtnLocal"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/ic_locate"
                android:layout_marginRight="20dp"

                />

            <ImageButton
                android:layout_centerVertical="true"
                android:id="@+id/imgbtnShoppingBag"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/ic_shopping_bag"
                android:layout_marginRight="10dp"

                />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>